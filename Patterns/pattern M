package Patterns;

public class patternM {
    public static void main(String[] args) {
        int n = 8;
        for(int i=n; i>=0; i--){
            for(int j=0; j<=n; j++){
                if(j==0 || j==n || i==j && i>n/2 || j+i==n && i>=n/2){
                    System.out.print("* ");
                } else {
                    System.out.print("  ");
                }
            }
            System.out.println();
        }
    }
}
