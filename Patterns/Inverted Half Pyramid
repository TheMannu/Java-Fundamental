package Patterns;

import java.util.Scanner;

public class InvertedHalfPyramid {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter the upper limit of Stars");
        int n = input.nextInt();
        input.close();
        for(int i=n; i>=1; i--){            //i will itrate from n to 1 and decrease i--
            for (int j=1; j<=i; j++){       //j will itrate from 1 to i and increase i++
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
