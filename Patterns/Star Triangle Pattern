package Patterns;

import java.util.Scanner;

public class triangleStar {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter the no of base stars");
        int n = input.nextInt();
        input.close();
        for (int i=0; i<=n; i++){
            for(int j=0; j<=i; j++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
