package Patterns;

import java.util.Scanner;

public class RotatedHalfPyramid{
    public static void main(String[] args) {
        Scanner input =new Scanner(System.in);
        System.out.println("Enter the upper limit of Stars");
        int n = input.nextInt();
        input.close();
        //outer loop 
        for(int i=1; i<=n; i++){
            //inner loop for spaces print
            for(int j =1; j<=n-i; j++){
                System.out.print("  ");
            }
            //iner loop for Star print
            for (int j=1; j<=i; j++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
